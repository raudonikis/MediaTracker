<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/watchedFragment">

    <fragment
        android:id="@+id/watchedFragment"
        android:name="com.raudonikis.movietracker.features.watched.WatchedFragment"
        android:label="WatchedFragment"
        tools:layout="@layout/fragment_watched" />
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.raudonikis.movietracker.features.discover.DiscoverFragment"
        android:label="DiscoverFragment"
        tools:layout="@layout/fragment_discover" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.raudonikis.movietracker.features.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_mediaDetailsFragment"
            app:destination="@id/mediaDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mediaDetailsFragment"
        android:name="com.raudonikis.movietracker.features.mediadetails.MediaDetailsFragment"
        android:label="MediaDetailsFragment"
        tools:layout="@layout/fragment_media_details">
        <argument
            android:name="mediaItem"
            app:argType="com.raudonikis.movietracker.model.MediaItem" />
    </fragment>
</navigation>